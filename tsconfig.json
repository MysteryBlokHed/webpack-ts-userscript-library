{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "es6"],
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib/",
    "declaration": true
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "public"
  }
}
